<%- include common/header.ejs %>

<div class="container">

    <%- include common/navbar.ejs %>

    <div class="jumbotron">
        <h1>
            <%=title %>
        </h1>
    </div>
    <div class="row">
        <br/>
        <div class="col-md-6 col-sm-6 text-center">
            Sign In
            <form name="signInForm" action="/auth/signin" method="post">
                User Name:<br/> <input name="username" id="username"><br/>
                Password:<br/><input name="password" id="password"><br/>
                <input type="submit" value="Sign In">
            </form>
        </div>
        <div class="col-md-6 col-sm-6 text-center">
            Sign Up
            <form name="signUpForm" action="/auth/signup" method="post">
                User Name:<br/><input name="username" id="username"><br/>
                Password:<br/><input name="password" id="password"><br/>
                <input type="submit" value="Sign Up">
            </form>
        </div>
    </div>

</div>

<%- include common/footer.ejs %>
